{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/index.ts",
    "src/theme/**/*.ts",
    "src/theme/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/layouts/**/*.ts",
    "src/layouts/**/*.tsx",
    "src/routes/**/*.ts",
    "src/routes/**/*.tsx",
    "src/locales/**/*.ts",
    "src/locales/**/*.tsx",
    "src/global-config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    ".storybook",
    "storybook-static"
  ]
}
